{
  "name": "server",
  "version": "0.0.1",
  "description": "Blood Link Server",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/memory-cache": "^0.2.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "fs-extra": "^11.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bullmq": "^5.30.0",
    "compression": "^1.7.5",
    "concurrently": "^9.1.0",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.1.14",
    "ts-node-dev": "^2.0.0",
    "typeorm": "0.3.20"
  },
  "scripts": {
    "start": "node build/app.js",
    "dev": "ts-node-dev src/app.ts",
    "dev2": "concurrently \"tsc -w\" \"nodemon build/app.js\"",
    "start:worker:all": "concurrently \"-node-dev src/infrastructure/bull/workers/donationRequest.worker.ts\" \"ts-node-dev src/infrastructure/bull/workers/email.worker.ts\"",
    "start:worker:donation": "ts-node-dev src/infrastructure/bull/workers/donationRequest.worker.ts",
    "start:worker:email": "ts-node-dev src/infrastructure/bull/workers/email.worker.ts",
    "build": "tsc && node src/scripts/copyViews.js",
    "watch": "tsc -w",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration": "npm run typeorm migration:run -- -d ./src/infrastructure/database/data-source.ts",
    "start:insert:user:bulk": "ts-node-dev src/infrastructure/database/data/bulkInsert.ts",
    "start:pm2": "npm run build && pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 stop ecosystem.config.js && pm2 restart ecosystem.config.js",
    "resurrect:pm2": "pm2 resurrect",
    "logs:pm2": "pm2 logs",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "save:pm2": "pm2 save"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "msgpackr-extract",
      "protobufjs"
    ]
  }
}
